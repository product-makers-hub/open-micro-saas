  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write --ignore-path .gitignore .",
    "test": "playwright test --max-failures=1",
    "test:ui": "playwright test --ui",
